<% base_path = "/about" %>

<div class="panel panel-default"><div class="list-group">
        <% nav_items = [
      { title: "About", href: "#{base_path}"},
      { title: "CLI Reference", href: "#{base_path}/cli-reference"},
    ]
    nav_items.each do |nav_item| %>
    	<a href="<%= nav_item[:href] %>" class="list-group-item <%= 'active' if nav_item[:href] == @item.identifier %>">
                <%= nav_item[:title] %>
	</a>
    <% end %>
    </div>
</div>
