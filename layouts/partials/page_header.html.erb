<ol class="breadcrumb">
<% breadcrumbs_trail.each_with_index do |bc, index| %>
	<% if index == 0 %>
 		<li><a href="/">Home</a></li>
	<% end %>
	<% if !bc.nil? && bc.identifier != @item.identifier && index > 0 %>
		<li><a href="<%= bc.identifier %>"><%= bc[:title] || bc.identifier.split('/').last %></a></li>
	<% end %>
<%end %>
</ol>

<% if item.identifier.start_with?("/transfer-api/docs") %>
	<h1><%= @item[:title] %> <small><%= @item[:subtitle] %></small></h1>
	<ul class="nav nav">
		<% nav_items = [
			{ title: "Reference", href: "#"},
			{ title: "Tutorials", href: "#"},
			{ title: "Libraries", href: "#"},
			{ title: "Support", href: "#"},
		]	%>
		<% nav_items.each do |nav_item| %>
		<li class="<%= 'active' if nav_item[:href] == @item.identifier %>">
			<%= link_to nav_item[:title], nav_item[:href] %>
		</li>
		<% end %>
	</ul>
<% elsif item.identifier.start_with?("/toolkit/docs") %>
	<h1><%= @item[:title] %></h1>
	<ul class="nav nav">
		<% nav_items = [
			{ title: "Release Notes", href: "#"},
			{ title: "Downloads", href: "#"},
			{ title: "Support", href: "#"},
		]	%>
		<% nav_items.each do |nav_item| %>
		<li class="<%= 'active' if nav_item[:href] == @item.identifier %>">
			<%= link_to nav_item[:title], nav_item[:href] %>
		</li>
		<% end %>
	</ul>
<% else %>
	<h1><%= @item[:title] %></h1>
<% end %>