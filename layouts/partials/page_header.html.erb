<% if !@item[:hide_breadcrumb] %> 
	<ol class="breadcrumb">
		<% breadcrumbs_trail.each_with_index do |bc, index| %>
			<% if index == 0 %>
		 		<li><a href="/">Home</a></li>
			<% end %>
			<% if !bc.nil? && bc.identifier != @item.identifier && index > 0 %>
				<li><a href="<%= bc.identifier %>"><%= bc[:title] || bc.identifier.split('/').last %></a></li>
			<% end %>
		<%end %>
	</ol>
<%end %>

<% if item.identifier.start_with?("/transfer-api/docs") %>
	<h1><%= @item[:title] %> <small><%= @item[:subtitle] %></small></h1>
	<ul class="nav nav">
		<% nav_items = [
			{ title: "Reference", link: "#"},
			{ title: "Tutorials", link: "#"},
			{ title: "Libraries", link: "#"},
			{ title: "Support", link: "#"},
		]	%>
		<% nav_items.each do |nav_item| %>
		<li class="<%= 'active' if nav_item[:link] == @item.identifier %>">
			<%= link_to nav_item[:title], nav_item[:link] %>
		</li>
		<% end %>
	</ul>
<% elsif item.identifier.start_with?("/toolkit/") %>
	<h1><%= @item[:title] %></h1>
	<ul class="nav nav">
		<% nav_items = [
			{ title: "About", link: "/toolkit/"},
			{ title: "Documentation", link: "/toolkit/docs/"},
			{ title: "Downloads", link: "/toolkit/downloads/"},
			{ title: "Support", link: "/support#toolkit"},
		]	%>
		<% nav_items.each do |nav_item| %>
		<li class="<%= 'active' if nav_item[:link] == @item.identifier %>">
			<%= link_to nav_item[:title], nav_item[:link] %>
		</li>
		<% end %>
	</ul>
<% else %>
	<h1><%= @item[:title] %></h1>
<% end %>